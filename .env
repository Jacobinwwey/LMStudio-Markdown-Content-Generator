# LLM API Configuration
# ====================
# Set LLM_PROVIDER to one of: lmstudio, deepseek, openai, anthropic, google, mistral, azure_openai, ollama
LLM_PROVIDER=lmstudio

# LM Studio Configuration
# ----------------------
# Local LM Studio server
LMSTUDIO_ENDPOINT=http://localhost:1234/v1/chat/completions
LMSTUDIO_API_KEY=EMPTY
LMSTUDIO_MODEL=local_model

# DeepSeek Configuration
# ---------------------
# Get your API key from: https://platform.deepseek.com/v1/chat/completions
DEEPSEEK_ENDPOINT=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-reasoner

# OpenAI Configuration
# -------------------
# Get your API key from: https://platform.openai.com/api-keys/chat/completions or https://openrouter.ai/api/v1/chat/completions(comes to error if no /chat/completions)
OPENAI_ENDPOINT=https://api.openai.com/v1/chat/completions
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# Anthropic Configuration
# ----------------------
# Get your API key from: https://console.anthropic.com/v1/messages
ANTHROPIC_ENDPOINT=https://api.anthropic.com/v1/messages
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google Configuration
# -------------------
# Get your API key from: https://ai.google.dev/v1/models
GOOGLE_ENDPOINT=https://generativelanguage.googleapis.com/v1/models
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-2.0-flash-exp

# Mistral Configuration
# --------------------
# Get your API key from: https://console.mistral.ai/v1
MISTRAL_ENDPOINT=https://api.mistral.ai/v1
MISTRAL_API_KEY=
MISTRAL_MODEL=mistral-large-latest

# Azure OpenAI Configuration
# -------------------------
# Get your API key from Azure Portal
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_MODEL=gpt-4
AZURE_OPENAI_API_VERSION=2023-05-15

# Ollama Configuration
# -------------------
# Local Ollama server
OLLAMA_ENDPOINT=http://localhost:11434/api/chat
OLLAMA_MODEL=llama3

# Search Configuration
# -------------------
# Controls web search behavior
SEARCH_ENABLED=true
SEARCH_MAX_RESULTS=10
SEARCH_MAX_PAGES=10
SEARCH_TIMEOUT=120
SEARCH_SHOW_PROGRESS=true

# Schedule Configuration
# ---------------------
# Controls execution timing
SCHEDULE_START_DELAY_HOURS=0
SCHEDULE_TIMEOUT_HOURS=100000
CHECK_INTERVAL=30
SCHEDULE_MAX_CYCLES=1000

# Debug Configuration
# ------------------
# Controls debug output
DEBUG_LOG_REQUESTS=true
DEBUG_SAVE_JSON_DUMPS=true
DEBUG_SHOW_FULL_ERRORS=true

# Output Configuration
# -------------------
# Controls output behavior
OUTPUT_DESTINATION_PATH=
OUTPUT_MOVE_PROCESSED=true
